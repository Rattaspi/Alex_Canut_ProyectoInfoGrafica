#version 330 core
layout(location = 0) in vec3 pos;
layout(location = 1) in vec3 n;

out vec4 position;
out vec4 normal;

uniform mat4 modelMat;
uniform mat4 finalMat;

void main(){
	gl_Position = finalMat * vec4(pos,1);
	position = vec4(pos,1);
	normal.xyz = mat3(transpose(inverse(modelMat))) * n;
	normal = normalize(normal);
}